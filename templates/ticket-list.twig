{% extends "layout.twig" %}

{% block content %}
<div class="container my-5">

  <!-- Create Ticket Form -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Create a New Ticket</h5>
    </div>
    <div class="card-body">
      <form class="row g-3" id="ticketForm">
        <div class="col-md-6">
          <label for="title" class="form-label">Title</label>
          <input type="text" id="title" class="form-control" required placeholder="Enter ticket title">
        </div>
        <div class="col-md-6">
          <label for="category" class="form-label">Category</label>
          <select id="category" class="form-select" required>
            <option value="">Select category</option>
            <option value="Technical Issue">Technical Issue</option>
            <option value="Billing">Billing</option>
            <option value="General Inquiry">General Inquiry</option>
          </select>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" rows="3" class="form-control" required placeholder="Describe your issue..."></textarea>
        </div>
        <div class="col-12 d-flex justify-content-between">
          <a href="?page=dashboard" class="btn btn-secondary">Back to Dashboard</a>
          <button type="submit" class="btn btn-primary">Submit Ticket</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Ticket List -->
  <div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
      <h5 class="mb-0">All Tickets</h5>
    </div>
    <div class="card-body" id="ticketList">
    </div>
  </div>

</div>

<script>
  let tickets = JSON.parse(localStorage.getItem("tickets")) || [];

  function displayTickets() {
    const container = document.getElementById("ticketList");

    if (tickets.length === 0) {
      container.innerHTML = '<p class="text-muted">No tickets yet. Create one above ðŸ‘†</p>';
      return;
    }

    container.innerHTML = tickets.map(ticket => `
      <div class="border-start border-primary ps-3 mb-3">
        <h6 class="fw-bold mb-1">${ticket.title}</h6>
        <p class="text-muted mb-1"><strong>Category:</strong> ${ticket.category}</p>
        <p>${ticket.description}</p>
      </div>
    `).join("");
  }

  displayTickets();

  document.getElementById("ticketForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const newTicket = {
      id: Date.now(),
      title: document.getElementById("title").value,
      category: document.getElementById("category").value,
      description: document.getElementById("description").value,
      status: "Open",
      created: new Date().toLocaleDateString()
    };

    tickets.push(newTicket);
    localStorage.setItem("tickets", JSON.stringify(tickets));

    alert("âœ… Ticket Created!");
    this.reset();
    displayTickets();
  });
</script>
{% endblock %}
