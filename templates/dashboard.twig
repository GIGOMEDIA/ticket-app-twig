{% extends "layout.twig" %}

{% block content %}

<div class="container py-4">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h2 class="fw-bold">Welcome to Your Dashboard, {{ user.username }}</h2>
      <p class="text-muted">Manage your tickets and activities easily.</p>
    </div>
  </div>

  <div class="row g-3">
    <!-- Summary Cards -->
    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <h5>Total Tickets</h5>
        <h3 class="fw-bold text-primary"><span id="totalTickets">0</span></h3>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <h5>Open Tickets</h5>
        <h3 class="fw-bold text-warning"><span id="openTickets">0</span></h3>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm p-3 border-0">
        <h5>Closed Tickets</h5>
        <h3 class="fw-bold text-success"><span id="closedTickets">0</span></h3>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <div class="card shadow-sm p-4 border-0">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="fw-bold mb-0">Recent Tickets</h5>
          <a href="?page=tickets" class="btn btn-outline-primary btn-sm">View All</a>
        </div>

        <table class="table table-hover table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Subject</th>
              <th>Status</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody id="recentTicketsBody">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  // Tickets from localStorage
  let tickets = JSON.parse(localStorage.getItem("tickets")) || [];

  // Ticket counts
  document.getElementById("totalTickets").innerText = tickets.length;
  document.getElementById("openTickets").innerText = tickets.filter(t => t.status === "Open").length;
  document.getElementById("closedTickets").innerText = tickets.filter(t => t.status === "Closed").length;

  // Recent 3 tickets
  const recentTicketHTML = tickets.slice(-3).reverse().map((ticket, index) => `
    <tr>
      <td>${index + 1}</td>
      <td>${ticket.title}</td>
      <td><span class="badge ${ticket.status === "Open" ? "bg-warning" : "bg-success"}">${ticket.status}</span></td>
      <td>${ticket.created}</td>
    </tr>
  `).join("");

  document.getElementById("recentTicketsBody").innerHTML = recentTicketHTML || `
    <tr>
      <td colspan="4" class="text-center text-muted">No recent tickets</td>
    </tr>`;
</script>

{% endblock %}
